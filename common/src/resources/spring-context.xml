<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd"
	   default-lazy-init="true">

<description>Spring Configuration</description>

	<bean id="springContextHolder" class="com.fzy.utils.SpringContextHolder" lazy-init="false"/>

	<bean id="disposableBenaListener" class="com.fzy.listener.DisposableBeanListener" lazy-init="false"/>

    <!-- 通配符加载所有config*.properties文件  -->
	<context:property-placeholder ignore-unresolvable="true" location="classpath*:config*.properties" />

	<import resource="classpath*:spring-context-dao.xml"></import>
	<import resource="classpath*:spring-mybatis_1.xml"></import>
	<import resource="classpath*:spring-mybatis_2.xml"></import>

	<import resource="classpath*:spring-context-task.xml"/>


</beans>